<!-- PARTIAL DEL HEAD -->
<%- include ('./partials/head') %>

    <!-- PARTIAL DEL HEADER -->
    <%- include ('./partials/header') %>


        <main class="bg-black px-8 sm:px-28 lg:px-52">
            <article class="py-6 w-full sm:py-8">
                <p class="text-center text-2xl font-black text-smoke-white lg:text-3xl"><%= lang === 'en' ? 'Projects' : 'Proyectos' %></p>
            </article>

            <section class="text-smoke-white flex flex-col sm:flex-row sm:justify-between">
                <article class="bg-blue-dark px-7 py-5 flex flex-col items-center mb-7 sm:mb-0 sm:w-[45%] lg:py-7 text-center shadow-project-card">
                    <p class="text-blue-project pb-3 text-xl font-black lg:text-3xl">6</p>
                    <p class="text-base lg:text-xl"><%= lang === 'en' ? 'Months Experience' : 'Meses de Experiencia' %></p>
                </article>

                <article class="bg-blue-dark px-7 py-5 flex flex-col items-center sm:w-[45%] lg:py-7 text-center shadow-project-card">
                    <p class="text-blue-project pb-3 text-xl font-black lg:text-3xl"><%= numberProjects %></p>
                    <p class="text-base lg:text-xl"><%= lang === 'en' ? 'Completed Projects' : 'Proyectos Completados' %></p>
                </article>
            </section>

            <article class="py-6 w-full sm:py-8">
                <p class="text-xl font-black text-smoke-white lg:text-2xl"><%= lang === 'en' ? 'Featured Projects' : 'Proyectos Destacados' %></p>
            </article>

            <section class="pb-1 sm:flex sm:flex-wrap sm:justify-between">
                <% projects.forEach(item => { %>
                    <article class="mb-7 sm:w-[45%]">
                        <article class="bg-blue-dark px-5 py-12 mb-2 group">
                            <div class="shadow-project  transform transition-transform group-hover:scale-105 sm:h-[20vw] overflow-hidden">
                                <a href="<%= item.website %>" target="_blank">
                                    <img src="/images/<%= item.image %>" class="w-full h-full object-cover" alt="">
                                </a>
                            </div>
                        </article>
    
                        <article>
                            <p class="text-smoke-white font-extrabold lg:text-xl"><%= item.title %></p>
                            <a href="<%= item.github %>" target="_blank" class="text-sm text-blue-project font-extrabold lg:text-lg">Github âž”</a>
                        </article>
                    </article>
                <% }) %>
            </section>
        </main>

        <%- include ('./partials/footer') %>